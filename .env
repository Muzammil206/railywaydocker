# GeoServer Configuration
GEOSERVER_DATA_DIR=/var/geoserver_data
JAVA_OPTS=-Djava.awt.headless=true -Xms512m -Xmx2048m -XX:MaxPermSize=512m

# GeoServer Admin Credentials
GEOSERVER_ADMIN_USER=admin
GEOSERVER_ADMIN_PASSWORD=geoserver

# PostgreSQL/PostGIS Configuration
POSTGRES_DB=geoserver
POSTGRES_USER=geoserver
POSTGRES_PASSWORD=geoserver
DATABASE_URL=postgresql://geoserver:geoserver@postgis:5432/geoserver

# Additional Database (optional)
GEODATA_DB=geodata
GEODATA_USER=geoapp
GEODATA_PASSWORD=geoapp123